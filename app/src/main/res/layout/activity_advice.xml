<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttoncolor"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.cc.calculator.activity.CollectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            android:src="@mipmap/btn_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="40dp"
            android:text="用户反馈"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="如果建议被采纳，可能获得精美礼品哟！"/>
        <EditText
            android:id="@+id/et_advice"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:lines="9"
            android:hint="您的建议和意见"
            android:padding="10dp"
            android:textSize="15sp"
            android:gravity="left|top"
            android:background="@drawable/conner_shape"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:background="@drawable/button_radius_style"
            android:text="提交意见"/>
    </LinearLayout>
</LinearLayout>
